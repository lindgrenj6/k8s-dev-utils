# auth
export DEV_USERNAME=dbomhof@redhat.com
export DEV_PASSWORD=redhat
export auth="$DEV_USERNAME:$DEV_PASSWORD"
export qauth="insights-qa:redhat"

# env shortcuts
export INSIGHTS_ENV_URL=https://ci.cloud.redhat.com

export api=http://localhost:3000/api/catalog/v1.0

export ci=https://ci.cloud.redhat.com/api/catalog/v1.0
export qa=https://qa.cloud.redhat.com/api/catalog/v1.0

export APPROVAL_URL=$INSIGHTS_ENV_URL/api/approval/v1.0
export approval=$APPROVAL_URL
export TOPOLOGICAL_INVENTORY_URL=$INSIGHTS_ENV_URL/api/topological-inventory/v2.0
export topo=$INSIGHTS_ENV_URL/api/topological-inventory/v2.0
export RBAC_URL=$INSIGHTS_ENV_URL/api/rbac/v1/
export rbac=$RBAC_URL
export SOURCES_URL=$INSIGHTS_ENV_URL/api/sources/v1.0
export sources=$INSIGHTS_ENV_URL/api/sources/v1.0

# use as header, tack $rhid on the end ci of queries
export rhid="x-rh-identity:"
# use as header, tack $rhid on the end of qa queries
export qarhid="x-rh-identity:"
# just the raw header
export x_rh_id=""

alias insights_run="PATH_PREFIX=api APP_NAME=catalog bin/rails s -p 5000"

# if you have a ssh tunnel going to the VPN host with port 3128 forwarded you can use this
# to forward traffic to the cluster without being on the VPN:
# proxy http -a $auth $topo/service_plans
function proxy() { 
    HTTPS_PROXY=http://localhost:3128 HTTP_PROXY=http://localhost:3128 $*
}
